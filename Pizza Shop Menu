
#List to keep track of the kinds of pizza that are sold.
toppings = [
    "pepperoni",
    "pineapple",
    "cheese", 
    "sausage",
    "olives",
    "anchovies",
    "mushrooms"
]
print(toppings)

# Keep track of the costs of pizza slices.
prices = [
    2,
    6,
    1,
    3,
    2,
    7,
    2,
]
print(prices)

#Count the number of two dollar slices.    
num_two_dollar_slices = prices.count(2)
print(num_two_dollar_slices)

# Find number of pizza types.
num_pizzas = len(toppings)
print("We sell " + str(num_pizzas) + " different kinds of pizza!" )
pizza_and_prices = [
   [2, "pepperoni"],
    [6, "pineapple"],
  [1, "cheese"],
    [3,"sausage"],
   [2,"olives"],
    [7, "anchovies"], 
    [2, "mushrooms"]
]

# Display menu of pizza and prices.

pizza_and_prices.sort()
print(pizza_and_prices)

#Store priciest pizza in a variable
priciest_pizza = pizza_and_prices[-1]
print(priciest_pizza)

#Remove anchovies from the list because the customer bought the last slice.

pizza_and_prices.pop()
print(pizza_and_prices)
#Add pepper pizza to the menu.
pizza_and_prices.insert(4, [2.5, "peppers"])
print(pizza_and_prices)
#Display 3 lowest cost pizzas.
three_cheapest = pizza_and_prices[:3]
print(three_cheapest)
